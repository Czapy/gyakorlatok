---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const tasks = await getCollection("tasks");
---

<Layout>
  <ul class="list">
    {
      tasks.map((task) => (
        <li class="list-row">
          <a href={`${import.meta.env.BASE_URL}/f/${task.id}`}>
            {task.data.title}
          </a>
        </li>
      ))
    }
  </ul>
</Layout>
